<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <com.wmx.android.wrstar.views.widgets.ActionBarPrimary
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftPadding="@dimen/dimen_8"
        app:showLeftImage="true"
        app:title="@string/personal_starbean" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_170"
        android:layout_marginLeft="@dimen/common_margin_left_or_right"
        android:layout_marginRight="@dimen/common_margin_left_or_right"
        android:paddingTop="@dimen/common_margin_top_or_bottom">

        <com.wmx.android.wrstar.views.widgets.CirImageView
            android:id="@+id/iv_avator"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"

            android:padding="@dimen/dimen_6"
            android:src="@mipmap/ic_avatar_default" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_toRightOf="@id/iv_avator"
            android:text="name"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_6" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/dimen_5"
            android:src="@mipmap/ic_my_page_star" />

        <TextView
            android:id="@+id/tv_star_bean_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv1"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@id/iv1"
            android:text="@string/total_star2"

            />

        <Button
            android:id="@+id/btn_go_recharge"
            style="@style/BtnYellow"
            android:layout_width="@dimen/dimen_110"
            android:layout_height="@dimen/dimen_35"

            android:layout_marginTop="@dimen/dimen_100"
            android:text="我要充值"
            android:layout_centerHorizontal="true"
            android:textColor="@color/sl_btn_text"
            android:textSize="@dimen/text_size_5" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40"
        android:id="@+id/ly1"
        android:layout_marginLeft="@dimen/common_margin_left_or_right"
        android:layout_marginRight="@dimen/common_margin_left_or_right">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:src="@mipmap/ic_help_red"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="什么是星豆"
            android:layout_toRightOf="@id/iv2"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_5"
            android:layout_marginLeft="@dimen/dimen_10"
            />
        
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_starbean"
            android:layout_below="@id/tv1"
            android:layout_alignLeft="@id/tv1"
            android:textScaleX="1.1"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:layout_marginTop="@dimen/dimen_10"
            />





    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/common_margin_left_or_right"
        android:layout_marginRight="@dimen/common_margin_left_or_right">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:src="@mipmap/ic_help_red"
            />
        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何获得星豆"
            android:layout_toRightOf="@id/iv3"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_5"
            android:layout_marginLeft="@dimen/dimen_10"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_get_starbean"
            android:layout_below="@id/tv5"
            android:layout_alignLeft="@id/tv5"
            android:textScaleX="1.1"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:layout_marginTop="@dimen/dimen_10"
            />





    </RelativeLayout>


</LinearLayout>