<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wmx.android.wrstar.views.activities.KeJianActivity">

    <com.wmx.android.wrstar.views.widgets.ActionBarPrimary
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftPadding="@dimen/dimen_8"
        app:showLeftImage="true"
        app:rightPadding="@dimen/dimen_8"
        />


    <include
        android:id="@+id/net_error"
        layout="@layout/item_net_error" />


    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/rv_kejian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_progress="@layout/view_progress" />

</LinearLayout>
