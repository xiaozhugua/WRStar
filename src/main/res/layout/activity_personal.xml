<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wmx.android.wrstar.views.widgets.ActionBarPrimary
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftPadding="@dimen/dimen_8"
        app:showLeftImage="true"
        app:title="@string/personal_info"
        />

    <RelativeLayout
        android:id="@+id/ly_avator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/common_margin_left_or_right"
        android:paddingRight="@dimen/common_margin_left_or_right">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="修改头像"

            />


        <com.wmx.android.wrstar.views.widgets.CirImageView
            android:id="@+id/iv_avator"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_6"
            android:src="@mipmap/ic_avatar_default" />


        <View
            style="@style/HorizontalDivider"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ly_nickname"
        style="@style/RegisterItem">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="昵称"

            />

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/PersonalTextView"
            android:text="糯米林" />


        <View
            style="@style/HorizontalDivider"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ly_sex"
        style="@style/RegisterItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="性别"

            />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/PersonalTextView"
            android:text="女" />


        <View
            style="@style/HorizontalDivider"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_mobnum"
        style="@style/RegisterItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="手机"

            />

        <TextView

            android:id="@+id/tv_mobnum"
            style="@style/PersonalTextView"
            android:text="立即绑定" />

        <ImageView
            android:layout_width="@dimen/dimen_30"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_2"
            android:src="@mipmap/ic_right_arrow" />


        <View
            style="@style/HorizontalDivider"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_location"
        style="@style/RegisterItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="地区"

            />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_2"
            android:src="@mipmap/ic_right_arrow" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/PersonalTextView"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dimen_30"
            android:gravity="left|center_vertical"
            android:text="未更新" />


        <View
            style="@style/HorizontalDivider"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ly_signature"
        style="@style/RegisterItem">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="个性签名" />

        <TextView
            android:id="@+id/tv_signature"
            style="@style/PersonalTextView"
            android:text="不忘初心 ^-^" />


    </RelativeLayout>

</LinearLayout>