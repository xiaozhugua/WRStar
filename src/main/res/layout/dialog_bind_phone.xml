<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bind_phone_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_22"
        android:gravity="center_horizontal"
        android:text="该手机已经关联微明星账号"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_4"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_11"
        android:gravity="center_horizontal"
        android:text="是否绑定原账号？"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_2"
        />

    <View
        style="@style/HorizontalDivider"
        android:layout_marginTop="@dimen/dimen_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_bind_phone_item_left"
            android:gravity="center"
            android:text="去绑定"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_3"/>

        <View style="@style/VerticalDivider"/>

        <TextView
            android:id="@+id/tv_unbind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sl_bind_phone_item_right"
            android:gravity="center"
            android:text="使用其他手机号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_3"/>
    </LinearLayout>
</LinearLayout>
