<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_35"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@drawable/bg_circle_white"
        android:layout_marginTop="@dimen/dimen_120"
        android:padding="@dimen/dimen_12"
        android:src="@mipmap/ic_close" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200"
        android:layout_below="@id/iv_close"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"

        android:layout_marginTop="@dimen/dimen_15">


        <ImageView
            android:id="@+id/bg_dialog"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:background="@mipmap/dialog_bg_success"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开课提醒将发送到您绑定的手机"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_5"
            android:layout_marginTop="@dimen/dimen_160"
            android:textColor="@color/text_gray_deep"
            />


    </RelativeLayout>


</RelativeLayout>