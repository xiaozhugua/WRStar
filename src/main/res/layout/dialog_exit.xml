<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/bg_btn_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_share_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/bg_gray_deep"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divier_1"
        android:background="@drawable/img_shape_space" />

    <TextView
        android:id="@+id/dialog_exit_msg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="确定退出微明星？"
        android:textColor="@color/text_gray_deep"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dialog_exit_et"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:maxLength="250"
        android:textColor="@color/text_gray_deep"
        android:textSize="@dimen/text_size_5"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divier_1"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/dialog_exit_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/dialog_exit_fgx"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_gray_light"
            android:textSize="16sp" />

        <View
            android:id="@+id/dialog_exit_fgx"
            android:layout_width="@dimen/divier_1"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/dialog_exit_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/dialog_exit_fgx"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>