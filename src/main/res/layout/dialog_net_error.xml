<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_35"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_120"
        android:background="@drawable/bg_circle_white"
        android:padding="@dimen/dimen_12"
        android:visibility="invisible"
        android:src="@mipmap/ic_close" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250"
        android:layout_below="@id/iv_close"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/bg_btn_white"
        android:paddingLeft="@dimen/dimen_30"

        android:paddingTop="@dimen/dimen_10">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="提示"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_6" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_marginTop="@dimen/dimen_45"
            android:lineSpacingExtra="@dimen/dimen_10"
            android:gravity="center"
            android:text="网络链接错误，点击确定重试"
            android:textColor="@color/text_gray_light2"
            android:textSize="@dimen/text_size_5" />

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="取消"
            android:textColor="@color/text_gray_light2"
            android:background="@drawable/bg_btn_white"
            />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="确定"
            android:background="@drawable/bg_btn_rect_yellow_line_yellow"

            />


    </RelativeLayout>

</RelativeLayout>