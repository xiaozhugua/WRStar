<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_35"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_120"
        android:background="@drawable/bg_circle_white"
        android:padding="@dimen/dimen_12"
        android:src="@mipmap/ic_close" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250"
        android:layout_below="@id/iv_close"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_15"

        android:background="@drawable/bg_btn_white">


        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginTop="@dimen/dimen_25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tip_50"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_25"
                android:src="@mipmap/ic_star50" />

            <ImageView
                android:id="@+id/tip_100"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_15"
                android:src="@mipmap/ic_star100"

                />

            <ImageView
                android:id="@+id/tip_300"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_15"
                android:src="@mipmap/ic_star300" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_below="@id/ly1"
            android:layout_marginTop="@dimen/dimen_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tip_500"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_55"
                android:src="@mipmap/ic_star500" />

            <ImageView
                android:id="@+id/tip_1000"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_15"
                android:src="@mipmap/ic_star1000" />

            <ImageView
                android:id="@+id/tip_random"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_15"
                android:src="@mipmap/ic_star_random" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_tip"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_37"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@drawable/bg_btn_yellow"
            android:text="立即打赏" />

        <EditText
            android:id="@+id/et_star"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_37"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_9"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@id/btn_tip"
            android:background="@drawable/bg_edittext"
            android:hint="请输入不少与50星豆"
            android:inputType="number"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:singleLine="true"
            android:textColor="@color/text_gray_deep"
            android:textColorHint="@color/text_disable"
            android:textSize="14sp" />


    </RelativeLayout>

</RelativeLayout>