<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="@dimen/dimen_120"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_15"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_toRightOf="@id/iv_video"

            android:src="@drawable/img_shiping" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_icon"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_toRightOf="@+id/iv_icon"
            android:lines="1"
            android:text="如何修炼萌妹子三部曲的的"
            android:textColor="@color/sl_btn_text"
            android:textSize="@dimen/text_size_5" />

        <ImageView
            android:id="@+id/ic_start"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/dimen_10"
            android:src="@drawable/img_bofang" />

        <TextView
            android:id="@+id/tv_play_num"
            android:layout_width="@dimen/dimen_45"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ic_start"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@id/ic_start"
            android:text="35456" />


        <ImageView
            android:id="@+id/ic_good"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignBottom="@id/ic_start"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_toRightOf="@+id/tv_play_num"
            android:src="@drawable/img_shoucang1" />

        <TextView
            android:id="@+id/tv_good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ic_start"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@id/ic_good"
            android:text="22346" />


        <com.wmx.android.wrstar.views.widgets.CirImageView
            android:id="@+id/iv_author"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/ic_start"
            android:layout_marginTop="@dimen/dimen_40"
            android:src="@color/bg_gray"

            />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_author"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_toRightOf="@id/iv_author"
            android:text="糯米林"
            android:textColor="@color/text_gray_deep" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_author"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toRightOf="@id/tv_author"
            android:text="12分钟前" />


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_45"

            android:layout_marginTop="@dimen/dimen_15"
            android:src="@mipmap/img_bofang_tp" />


        <View
            style="@style/Divier20"

            android:layout_alignParentBottom="true" />

    </RelativeLayout>


</RelativeLayout>