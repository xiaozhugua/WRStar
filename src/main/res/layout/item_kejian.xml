<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/img_kejian_yulan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_live_default"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/img_kejian_bofang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/img_bofang_tp"
             />
        <TextView
            android:background="@color/bg_action_bar_end"
            android:id="@+id/itv_kejian_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="01:32:24"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
             />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/view_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#73161616"
            android:scaleType="fitXY" />


        <ImageView
            android:id="@+id/iv_type"
            android:visibility="gone"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_10"
            android:src="@mipmap/ic_vip"

            />

        <TextView
            android:id="@+id/type"
            android:visibility="gone"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_18"
            android:layout_alignBottom="@id/iv_type"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toRightOf="@id/iv_type"
            android:background="@mipmap/ic_live_tag"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_4"
            android:text="直播中"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_1" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:text="巴菲特的财务演讲"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_6" />
        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:text="by乐嘉老师"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_3" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="@dimen/dimen_13"
            android:layout_height="@dimen/dimen_13"
            android:layout_below="@+id/cen"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_red_start" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_below="@+id/cen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_9"
            android:layout_toRightOf="@id/iv2"
            android:text="当前0人观看" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/cen"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_30"
            android:layout_below="@id/tv_teacher"
            >


            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv1"
                android:layout_marginLeft="10dp"
                android:text="O2O"

                android:textColor="@color/white"
                android:textSize="@dimen/text_size_2" />


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="O2O"

                android:textColor="@color/white"
                android:textSize="@dimen/text_size_2"

                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv2"
                android:text="O2O"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_2" />


        </RelativeLayout>


    </RelativeLayout>

    </LinearLayout>
    <View style="@style/Divier10" />
</LinearLayout>