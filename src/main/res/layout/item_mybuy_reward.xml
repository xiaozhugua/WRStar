<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_margin_left_or_right"
        android:layout_marginRight="@dimen/common_margin_left_or_right"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="@dimen/common_margin_top_or_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_100"
            android:text="打赏"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_5" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_below="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送给直播13723489082 0个星豆"
            android:textColor="@color/text_gray_deep"
            android:layout_alignRight="@id/tv_title"
            android:layout_alignLeft="@id/tv_title"
            android:layout_marginTop="@dimen/dimen_5"
            android:textSize="@dimen/text_size_5" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_summary"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="2016-06-06 18:30:42.0" />

        <View
            style="@style/Divier1"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="@dimen/dimen_10"
            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_2"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_7"
           android:layout_centerVertical="true"
            android:text="+1150.00" />

    </RelativeLayout>


</LinearLayout>