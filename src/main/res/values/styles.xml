<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 水平分割线 -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_gray</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- 水平分割线 -->
    <style name="VerticalDivider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_gray</item>
    </style>

    <!--普通输入框-->
    <style name="EditTextSingleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_size_2 </item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- 密码输入框 -->
    <style name="EditTextPassword" parent="EditTextSingleLine">
        <item name="android:maxLength">@integer/max_length_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- 帐号输入框-->
    <style name="EditTextAccount" parent="EditTextSingleLine">
        <item name="android:maxLength">@integer/max_length_account</item>
        <item name="android:inputType">phone</item>
    </style>

    <!--黄色按钮样式-->
    <style name="BtnYellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_43</item>
        <item name="android:textSize">@dimen/text_size_5</item>
        <item name="android:textColor">@color/sl_btn_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sl_btn_yellow</item>
    </style>

    <!--黄色按钮样式-->
    <style name="BtnYellow2">



        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:button">@null</item>


        <item name="android:textColor">@color/sl_btn_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_classify</item>
    </style>
    <!--黄色按钮样式-->
    <style name="BtnYellow3">



        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:button">@null</item>


        <item name="android:textColor">@color/sl_btn_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_classify</item>
    </style>

    <!--  白色 圆角Button-->
    <style name="BtnWhite">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/shape_rectangle_bj</item>

        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gray_deep</item>
        <item name="android:layout_centerVertical">true</item>


        <item name="android:layout_marginRight">5dp</item>



    </style>

    <!--  黄色 圆角Button-->
    <style name="BtnYellow_TAG">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/shape_rectangle_bj_yellow</item>

        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>

        <item name="android:layout_centerVertical">true</item>


        <item name="android:layout_marginRight">5dp</item>



    </style>

    <!--  橘色 圆角Button-->
    <style name="BtnOrange_TAG">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/shape_rectangle_bj_orange</item>

        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>




        <item name="android:layout_marginRight">5dp</item>



    </style>

    <!--  分割线 1-->
    <style name="Divier1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="android:layout_height">1dp</item>

    </style>
    <!--  分割线 1-->
    <style name="Divier1yelolow">
        <item name="android:layout_width">40dp</item>
        <item name="android:background">@color/text_yellow</item>
        <item name="android:layout_height">2dp</item>

    </style>

    <!--  分割线 1-->
    <style name="Divier1_deep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/text_gray</item>
        <item name="android:layout_height">1dp</item>

    </style>


    <!--  分割线 10-->
    <style name="Divier10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="android:layout_height">10dp</item>



    </style>
    <!--  分割线 15-->
    <style name="Divier15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="android:layout_height">15dp</item>

    </style>

    <!--  分割线 20-->
    <style name="Divier20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_gray</item>
        <item name="android:layout_height">18dp</item>

    </style>


    <!--注册页面item-->
    <style name="RegisterItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_52</item>
        <item name="android:paddingLeft">@dimen/common_margin_left_or_right</item>
        <item name="android:paddingRight">@dimen/common_margin_left_or_right</item>
        <item name="android:background">@color/bg_white</item>
    </style>


    <!--个人资料 TextView item-->
    <style name="PersonalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text_gray_deep</item>
        <item name="android:textSize">@dimen/text_size_5</item>
        <item name="android:layout_marginLeft">@dimen/dimen_90</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="RoundCornerDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>

        <!-- 阴影的设置 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <style name="MediaController_Text">
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumb">@drawable/nemediacontroller_progressbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>


    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="dialog_with_bg" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="speakdialog_bottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/move_bottom_in_activity</item>
        <item name="@android:windowExitAnimation">@anim/move_bottom_out_activity</item>
    </style>



        <style name="Splash" parent="Theme.AppCompat.Light">

        <item name="android:windowBackground">@mipmap/ic_splash</item>//@null黑屏  @drawable/icon放一张启动图片

    <item name="android:windowNoTitle">true</item> //启动界面是否显示应用名称 true不显示 false显示

    </style>

</resources>
